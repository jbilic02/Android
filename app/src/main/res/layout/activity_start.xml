<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start"
    android:background="@color/design_default_color_primary">
    
    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/quiz_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        />
    <androidx.cardview.widget.CardView
        app:cardElevation="4dp"
        android:layout_centerInParent="true"
        android:layout_margin="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <Button
            android:id="@+id/btnPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#BF1016"
            android:backgroundTint="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="LETS PLAY"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="129dp"
        android:gravity="center_horizontal"
        android:text="Kviz znanja igra u bodove i sekunde. Svaki točan odgovor nagradi igrača sa 10 dodatnim bodovima, a negativni se kažnjava (-10). Sekunde odbrojavaju dok korisnik igra, te igra završava kada sekunde padnu na 0. Za svako pitanje imaš točno 10 sekundi."
        android:textStyle="bold"
        />

</RelativeLayout>